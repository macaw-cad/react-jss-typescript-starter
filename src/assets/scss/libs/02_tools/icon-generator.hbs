// sass-lint:disable-all
@font-face {
  font-family: '{{fontName}}';
  src: {{{src}}};
}

$webfont-icons: (
{{#each codepoints}}
  '{{@key}}': '\\{{this}}',
{{/each}}
);

@mixin icon-font {
  font-family: '{{fontName}}'
}

@mixin webfont-icon-common-definition {
    line-height: 1;
    font-family: '{{fontName}}';
    font-style: normal;
    font-weight: normal;
    display: inline-block;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

@mixin webfont-icon($name) {
  $icon: map-get($webfont-icons, $name);

  @if map-has-key($webfont-fn-icons, $name) {
    $icon: map-get($webfont-icons, map-get($webfont-fn-icons, $name));
  }

  &::before {
    @include webfont-icon-common-definition;
    vertical-align: middle;
    content: $icon;
  }
}

@mixin webfont-icon-after($name) {
  $icon: map-get($webfont-icons, $name);

  @if map-has-key($webfont-fn-icons, $name) {
    $icon: map-get($webfont-icons, map-get($webfont-fn-icons, $name));
  }

  &::after {
    @include webfont-icon-common-definition;
    vertical-align: middle;
    content: $icon;
  }
}

// sass-lint:enable-all
