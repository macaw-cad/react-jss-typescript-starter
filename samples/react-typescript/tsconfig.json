{
    "compilerOptions": {
      "target": "es5",
      "allowJs": false,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
      "lib": ["es2018", "dom"],
      "noImplicitAny": true
    },
    "include": [
      "src"
    ],
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ], 
    "types": [
      "node",
      "react-app-env"
    ]
  }
  